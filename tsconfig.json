{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "outDir": "./dist",                              
    "baseUrl": "./src",
    "downlevelIteration": true,                             
    "esModuleInterop": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true
  }
}
